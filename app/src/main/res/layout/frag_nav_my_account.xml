<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@android:color/white"
    tools:context="com.example.yashladha.android_seller.navigation.MyAccountFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout1"
        android:gravity="center">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/ivMyPic"
            android:paddingTop="10dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="My Name"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/tvMyName"
            android:layout_marginBottom="5dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tvPlan"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/linearLayout2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.85"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingLeft="70dp"
                android:id="@+id/linearLayout3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="9000000000"
                    android:layout_marginRight="15dp"
                    android:id="@+id/tvContact" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="201551098@iiitvadodara.ac.in"
                    android:id="@+id/tvEmail" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:text="Gandhinagar,Gujarat - 382012"
                    android:id="@+id/tvResAdd" />
            </LinearLayout>


            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.15"
                android:layout_height="25dp"
                android:src="@drawable/icon_edit"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:id="@+id/ivEdit"
                android:layout_marginLeft="10dp"
                android:clickable="true" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/vOption"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textStyle="bold"
            android:textSize="20dp"
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:id="@+id/tvChangePassword" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/vPassword"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="De-activate account"
            android:textStyle="bold"
            android:textSize="20dp"
            android:clickable="true"
            android:layout_marginTop="15dp"
            android:id="@+id/tvDeactivate" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/vDeactivate"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:clickable="true"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="0dp"
            android:id="@+id/tvLogOut" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/vLogOut"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" />


    </LinearLayout>
</RelativeLayout>
